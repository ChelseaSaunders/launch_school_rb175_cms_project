<div>
  <h3>Available Documents</h3>
    <table>
      <% @files.each do |file| %>
        <tr>
          <td>
            <a href="/<%= file %>" class="list_link"><%= file %></a>
          </td>
          <td>
            <a href="/<%= file %>/edit">Edit</a>
          </td>
          <td>
            <form class="inline" method="post" action="/<%=file %>/duplicate">
              <button type="submit">Duplicate Document</button>
            </form>
          </td>
          <td>
            <form class="inline" method="post" action="/<%= file %>/delete">
              <button type="sumbit">Delete</button>
            </form>
          </td>
        </tr>
      <% end %>
    </table>
  <h4><a href="/new">Createa a New Document</a></h4>
</div>

<div>
  <h3>Available Images</h3>
    <ul>
      <% @images.each do |image| %>
        <% puts image %>
        <li>
          <a href="/image/<%= image %>" class="list_link"><%= image %></a>
        </li>
      <% end %>
    </ul>
  <h4>Upload an Image:</h4>
  <form action="/image/upload" method="post" enctype="multipart/form-data">
    <p><input name="image" type="file" class="image_upload" /></p>
    <p><input type="submit" value="Upload Image" /></p>
  </form>
</div>

<div>
  <% if session[:username] %>
    <form action="/users/signout" method="post" class="inline">
    <p class="user_status">Signed in as <%= session[:username] %>.</p>
    <p><button type="submit">Sign Out</button></p>
    </form>
  <% else %>
    <form action="/users/signin" method="get">
      <p><button type="submit">Sign In</button></p>
    </form>
  <% end %>
</div>